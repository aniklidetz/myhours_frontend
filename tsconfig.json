{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "allowJs": true, // Allow JS files
    "checkJs": false, // Don't check JS files with TypeScript
    "paths": {
      // Alias path configuration to match babel.config.js
      "@/*": ["./*"],
      "@/hooks/*": ["./hooks/*"],
      "@/components/*": ["./components/*"],
      "@/constants/*": ["./constants/*"],
      "@/src/*": ["./src/*"]
    },
    "jsx": "react-native",
    "esModuleInterop": true
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
